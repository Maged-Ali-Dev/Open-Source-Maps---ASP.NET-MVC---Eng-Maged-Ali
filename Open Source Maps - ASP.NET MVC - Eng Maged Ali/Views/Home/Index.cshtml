@{
    ViewData["Title"] = "OpenStreetMap with Leaflet.js";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <style>
        /* Reset body margin and padding for consistent layout */
        html, body {
            margin: 0;
            padding: 0;
            height: 100%; /* Full height for body */
        }
        #map {
            height: 100vh; /* Full viewport height */
            width: 100%;
        }
        /* Add responsiveness for smaller screens */
       
    </style>
</head>
<body>
    <div id="map"></div>

    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script>
        // Initialize the map with the specified view (New York City)
        var map = L.map('map').setView([40.712776, -74.005974], 12);

        // Add the OpenStreetMap tile layer with attribution
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);
    </script>
</body>
</html>
